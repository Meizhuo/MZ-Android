<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animations.activity</item>
    </style>
    
    <style name="Base_ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDrawable">@drawable/dialog_progressbar_round_two</item>
        <item name="android:interpolator">@android:anim/linear_interpolator</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>
    
    <style name="progressBar_Dialog_style" parent="@style/Base_ProgressBar">
        <item name="android:indeterminateDuration">2000</item>
    </style>
    
      <style name="BaseDialog" parent="@android:Theme.Dialog">
        <item name="android:windowBackground">@color/lucency_white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animations.dialog</item>
    </style>

    <style name="Animations" />
    
    <style name="Animations.dialog">
        <item name="@android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="@android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="Animations.activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="Spinner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="RelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="RelativeLayout.main_item">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/mz_btn_item_main</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.home_item">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    
    <style name="TextView.UserCenter_item" parent="TextView">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView.item_main" parent="ImageView">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/aa_evernote</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_inputbar</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EditText.Usercenter_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:divider">@drawable/ic_line_1</item>
    </style>

</resources>