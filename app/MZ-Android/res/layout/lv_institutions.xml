<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/mz_btn_white2grey"
    android:minHeight="100dp"
    android:orientation="horizontal"
    android:padding="6dp" >

    <ImageView
        android:id="@+id/iv_institution_img"
        style="@style/ImageView"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_icon" />

    <LinearLayout
        style="@style/LinearLayout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/tv_institution_name"
            style="@style/TextView"
            android:text="文思特（北京）管理咨询有限公司"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_institution_description"
            style="@style/TextView"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
            android:textColor="@color/mz_grey_lv_two"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        style="@style/ImageView"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/aa_mini_webview_forward_disable" />

</LinearLayout>