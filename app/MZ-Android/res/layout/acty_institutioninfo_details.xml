<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mz_white"
    android:orientation="vertical" >

    <include layout="@layout/acty_base_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/institution_name"
                style="@style/TextView"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
                style="@style/LinearLayout.item"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="公司名称:"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/company_name"
                    style="@style/TextView"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
                style="@style/LinearLayout.item"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="办学类型:"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/institution_teach_type"
                    style="@style/TextView"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
                style="@style/LinearLayout.item"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="负责人:"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/institution_manager"
                    style="@style/TextView"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
                style="@style/LinearLayout.item"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="培训类型:"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/institution_traning_type"
                    style="@style/TextView"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
                android:id="@+id/institution_traning_contach_phone_dial"
                style="@style/LinearLayout"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    style="@style/LinearLayout.item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/TextView"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:text="联系电话:"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/institution_traning_contach_phone"
                        style="@style/TextView"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:text=""
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="3dp" >

                    <ImageView
                        android:clickable="false"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:scaleType="centerCrop"
                        android:src="@drawable/aa_dial_phone" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
                style="@style/LinearLayout.item"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="联系邮箱:"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/institution_email"
                    style="@style/TextView"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
                style="@style/LinearLayout.item"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="公司地址:"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/institution_traning_institution_addr"
                    style="@style/TextView"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
                style="@style/LinearLayout.item"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="联系人:"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/institution_traning_contact_people"
                    style="@style/TextView"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />

            
         
            <LinearLayout
                style="@style/LinearLayout.item"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView"
                    android:layout_marginLeft="8dp"
                    android:text="师资力量:"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayout.item"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/company_teacher_resource"
                    style="@style/TextView"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>
            
               <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />
            
            
            <LinearLayout
                android:id="@+id/ll_company_description"
                style="@style/LinearLayout"
                android:layout_height="wrap_content"
                android:background="@drawable/mz_btn_white2grey"
                android:clickable="true"
                android:orientation="horizontal" >

                <LinearLayout
                    style="@style/LinearLayout.item"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/TextView"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:text="公司简介 ："
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>
            
              <Button
                   android:id="@+id/btn_company_description"
                 android:layout_marginBottom="20dp"
                style="@style/TextView"
                android:text="公司详情"
                    android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mz_bbuton_primary"
            android:textColor="@color/white"
             />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
             
                style="@style/LinearLayout.item"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >
                <LinearLayout 
                    style="@style/LinearLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    >

                <TextView
                    style="@style/TextView"
                    android:layout_marginLeft="8dp"
                    android:text="具体课程 : "
                    android:textSize="17sp" />
                </LinearLayout>
                
            </LinearLayout>
            <Button
                   android:id="@+id/institution_course_detail_btn"
                 android:layout_marginBottom="20dp"
                style="@style/TextView"
                android:text="课程详情"
                    android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mz_bbuton_primary"
            android:textColor="@color/white"
             />
        </LinearLayout>
    </ScrollView>

</LinearLayout>