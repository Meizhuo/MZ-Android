<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/mz_blue_title_nomal"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/btn_app_back"
        android:background="@drawable/mz_btn_title_back"
        android:layout_width="wrap_content"
        android:layout_height="45dp" >

        <ImageView
            android:id="@+id/iv_app_icon_back"
            style="@style/ImageView"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@drawable/icon_action_back" />

        <TextView
            android:id="@+id/tv_app_title"
            style="@style/TextView"
            android:layout_toRightOf="@+id/iv_app_icon_back"
            android:layout_alignBottom="@+id/iv_app_icon_back"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:layout_marginLeft="2dp"
            android:text="Application"
            android:textColor="@color/white"
            android:textSize="15sp" 
            android:layout_marginRight="2dp"/>
        <TextView 
            android:id="@+id/write_search_tv"
            style="@style/TextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="手写查询"
            />
    </RelativeLayout>

</LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            style="@style/TextView"
            android:text="证书类别:"
            />
        <Spinner 
            android:id="@+id/certificate_sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            style="@style/TextView"
            android:text="项目类别:"
            />
        <Spinner 
            android:id="@+id/project_sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            style="@style/TextView"
            android:text="等级:"
            />
        <Spinner 
            android:id="@+id/lever_sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
          
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <Button 
            android:id="@+id/btn_search"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mz_bbuton_primary"
            android:textColor="@color/white"
            android:text="查询"
            />
          
          </LinearLayout>
          
      
          
</LinearLayout>
