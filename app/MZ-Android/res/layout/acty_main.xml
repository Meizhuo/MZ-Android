<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mz_white"
    android:orientation="vertical" >

    <include layout="@layout/acty_base_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                style="@style/RelativeLayout"
                android:layout_height="160dp" >

                <org.meizhuo.view.AutoScrollViewPager
                    android:id="@+id/autoscrollviewpage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </org.meizhuo.view.AutoScrollViewPager>
            </RelativeLayout>

            <LinearLayout
                style="@style/LinearLayout"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/btn_unitinfo"
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main"
                        android:src="@drawable/ic_icon_unitinfo" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="单位信息" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/mz_grey" />

                <RelativeLayout
                    android:id="@+id/btn_institutions"
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main"
                        android:src="@drawable/ic_icon_institutions" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="培训机构信息" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
                style="@style/LinearLayout"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/btn_institution_consult"
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main"
                        android:src="@drawable/ic_icon_institution_consult" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="培训机构服务" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/mz_grey" />

                <RelativeLayout
                    android:id="@+id/btn_public_consult"
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main"
                        android:src="@drawable/ic_icon_public_consult" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="个人服务" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/ic_line_1" />

            <LinearLayout
                style="@style/LinearLayout"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/btn_usercenter"
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main"
                     >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main"
                        android:src="@drawable/ic_icon_usercenter" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="用户中心" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/mz_grey" />

                <RelativeLayout
                    android:id="@+id/btn_setting"
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main"
                        android:src="@drawable/ic_icon_setting" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="设置" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/ic_line_1" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>