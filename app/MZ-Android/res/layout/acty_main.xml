<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/RelativeLayout"
        android:layout_height="45dp"
        android:background="@drawable/ic_bg_tweet" >

        <TextView
            android:id="@+id/acty_main_tv_title"
            style="@style/TextView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:gravity="left"
            android:text="Application"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/bigbang" >

                <ViewFlipper
                    android:id="@+id/acty_mz_main_vf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoStart="true"
                    android:flipInterval="8000" >
                </ViewFlipper>
            </FrameLayout>

            <LinearLayout
                style="@style/LinearLayout"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="单位信息" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/vertical_dividing_night" />

                <RelativeLayout
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="单位信息" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/vertical_dividing_night" />

            <LinearLayout
                style="@style/LinearLayout"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="单位信息" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/vertical_dividing_night" />

                <RelativeLayout
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="单位信息" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/vertical_dividing_night" />

            <LinearLayout
                style="@style/LinearLayout"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="单位信息" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/vertical_dividing_night" />

                <RelativeLayout
                    style="@style/RelativeLayout.main_item"
                    android:background="@drawable/mz_btn_item_main" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        style="@style/ImageView.item_main" />

                    <TextView
                        style="@style/TextView"
                        android:layout_below="@+id/iv_icon"
                        android:layout_centerHorizontal="true"
                        android:text="单位信息" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/vertical_dividing_night" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>